<web-app>
    <display-name>Widget Store</display-name>
    <servlet>
        <servlet-name>drinks-servlet</servlet-name>
        <servlet-class>com.hcl.widgetstore.web.DrinkDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.hcl.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drinks-servlet</servlet-name>
        <url-pattern>/drinks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>need-permission</filter-name>
        <filter-class>com.hcl.web.NeedPermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>need-permission</filter-name>
        <url-pattern>/drinks</url-pattern>
    </filter-mapping>
</web-app>